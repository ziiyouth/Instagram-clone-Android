<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragment_signup_mail"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <EditText
        android:id="@+id/signup_email_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:background="@drawable/login_round_gray"
        android:hint="이메일 입력"
        android:inputType="textEmailAddress"
        android:layout_marginTop="15dp"
        android:maxLines="1"
        android:padding="16dp"
        android:selectAllOnFocus="true"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageButton
        android:id="@+id/signup_erase_ib"
        android:layout_width="17dp"
        android:layout_height="17dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/ic_text_erase"
        app:layout_constraintTop_toTopOf="@+id/signup_email_et"
        app:layout_constraintBottom_toBottomOf="@+id/signup_email_et"
        app:layout_constraintEnd_toEndOf="@+id/signup_email_et"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/sign_email_next_bt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:text="회원가입"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginTop="15dp"
        android:background="@drawable/login_round_blue"
        app:layout_constraintEnd_toEndOf="@+id/signup_email_et"
        app:layout_constraintStart_toStartOf="@+id/signup_email_et"
        app:layout_constraintTop_toBottomOf="@+id/signup_email_et"/>


</androidx.constraintlayout.widget.ConstraintLayout>