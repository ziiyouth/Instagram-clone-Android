<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".profile.ProfileEditActivity">

<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/profile_edit_bar"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_margin="15dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent">


    <ImageView
        android:id="@+id/profile_edit_close"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_profile_update_close"
        android:padding="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <TextView
        android:id="@+id/profile_edit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="프로필 편집"
        android:textColor="@color/black"
        android:layout_marginLeft="30dp"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/profile_edit_close"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <ImageView
        android:id="@+id/profile_edit_check"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_profile_update_check"
        android:padding="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />



    ></androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/profile_edit_img"
        android:layout_width="0dp"
        android:layout_height="95dp"
        app:srcCompat="@drawable/ic_profile_default"
        android:layout_marginTop="28dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile_edit_bar"
        />

    <TextView
        android:id="@+id/profile_edit_img_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="프로필 사진 변경"
        android:textSize="18sp"
        android:textColor="#0892F1"
        app:layout_constraintEnd_toEndOf="@+id/profile_edit_img"
        app:layout_constraintStart_toStartOf="@+id/profile_edit_img"
        app:layout_constraintTop_toBottomOf="@+id/profile_edit_img" />

    <TextView
        android:id="@+id/profile_edit_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="17dp"
        android:text="이름"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profile_edit_img_text" />

    <EditText
        android:id="@+id/profile_edit_name_et"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:layout_marginEnd="13dp"
        android:layout_marginStart="13dp"
        android:textSize="16dp"
        android:inputType="text"
        android:backgroundTint="#DEDEDE"
        app:layout_constraintTop_toBottomOf="@+id/profile_edit_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <TextView
        android:id="@+id/profile_edit_id"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="사용자 이름"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/profile_edit_name"
        app:layout_constraintTop_toBottomOf="@+id/profile_edit_name_et"/>


    <EditText
        android:id="@+id/profile_edit_id_et"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:layout_marginEnd="13dp"
        android:layout_marginStart="13dp"
        android:textSize="16dp"
        android:inputType="text"
        android:backgroundTint="#DEDEDE"
        app:layout_constraintTop_toBottomOf="@+id/profile_edit_id"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/profile_edit_intro"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="소개"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/profile_edit_name"
        app:layout_constraintTop_toBottomOf="@+id/profile_edit_id_et"/>


    <EditText
        android:id="@+id/profile_edit_intro_et"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:textSize="16dp"
        android:layout_marginEnd="13dp"
        android:layout_marginStart="13dp"
        android:inputType="text"
        android:backgroundTint="#DEDEDE"
        app:layout_constraintTop_toBottomOf="@+id/profile_edit_intro"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>



    <TextView
        android:id="@+id/profile_edit_link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="링크 추가"
        android:textSize="16dp"
        android:textColor="@color/black"
        android:layout_marginTop="7dp"
        app:layout_constraintStart_toStartOf="@+id/profile_edit_intro"
        app:layout_constraintTop_toBottomOf="@+id/profile_edit_intro_et"/>

    <View
        android:id="@+id/profile_edit_line1"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="15dp"
        android:background="@color/white_gray"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile_edit_link"/>

    <TextView
        android:id="@+id/profile_edit_pro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="프로패셔널 계정으로 전환"
        android:textSize="16dp"
        android:textColor="#0892F1"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="@+id/profile_edit_intro"
        app:layout_constraintTop_toBottomOf="@+id/profile_edit_line1"/>

    <View
        android:id="@+id/profile_edit_line2"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="15dp"
        android:background="@color/white_gray"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile_edit_pro"/>

    <TextView
        android:id="@+id/profile_edit_avatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="아바타 만들기"
        android:textSize="16dp"
        android:textColor="#0892F1"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="@+id/profile_edit_intro"
        app:layout_constraintTop_toBottomOf="@+id/profile_edit_line2"/>

    <View
        android:id="@+id/profile_edit_line3"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="15dp"
        android:background="@color/white_gray"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile_edit_avatar"/>

    <TextView
        android:id="@+id/profile_edit_personal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="개인정보 설정"
        android:textSize="16dp"
        android:textColor="#0892F1"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="@+id/profile_edit_intro"
        app:layout_constraintTop_toBottomOf="@+id/profile_edit_line3"/>

    <View
        android:id="@+id/profile_edit_line4"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="15dp"
        android:background="@color/white_gray"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile_edit_personal"/>



</androidx.constraintlayout.widget.ConstraintLayout>