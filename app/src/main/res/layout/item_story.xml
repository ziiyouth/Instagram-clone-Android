<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <ImageView
        android:id="@+id/item_story_border"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginLeft="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <ImageView
        android:id="@+id/item_story_profile"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:padding="5dp"
        app:layout_constraintTop_toTopOf="@id/item_story_border"
        app:layout_constraintBottom_toBottomOf="@id/item_story_border"
        app:layout_constraintStart_toStartOf="@id/item_story_border"
        app:layout_constraintEnd_toEndOf="@id/item_story_border"

        />

    <TextView
        android:id="@+id/item_story_id"
        android:layout_width="60dp"
        android:layout_height="15dp"
        android:text="band_lucy"
        android:textColor="@color/black"
        android:textSize="11dp"
        android:gravity="center"
        android:maxLines="1"
        android:layout_marginTop="2dp"
        android:ellipsize="end"
        app:layout_constraintStart_toStartOf="@id/item_story_profile"
        app:layout_constraintEnd_toEndOf="@id/item_story_profile"
        app:layout_constraintTop_toBottomOf="@id/item_story_profile" />

    <ImageView
        android:id="@+id/item_story_add"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:layout_marginLeft="59dp"
        android:layout_marginTop="40dp"
        android:padding="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        />






</androidx.constraintlayout.widget.ConstraintLayout>